<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="session">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3607/db_agribusiness</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <mapping class="hibernate.model.Categoria"/>
  <mapping class="hibernate.model.Distrito"/>
  <mapping class="hibernate.model.Entidade"/>
  <mapping class="hibernate.model.Localidade"/>
  <mapping class="hibernate.model.Pedido_produto"/>
  <mapping class="hibernate.model.Pedido"/>
  <mapping class="hibernate.model.Produto"/>
  <mapping class="hibernate.model.Provincia"/>
 </session-factory>
</hibernate-configuration>
